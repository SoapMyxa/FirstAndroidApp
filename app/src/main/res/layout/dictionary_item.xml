<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"       >


        <TextView
            android:id="@+id/dictionary_item_word_eng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textColor="@color/gray_3"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Word"
            android:layout_marginStart="15dp" />

        <TextView
            android:id="@+id/dictionary_item_word_translate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textColor="@color/gray_3"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Слово"
            android:layout_marginStart="15dp" />

        <!--правильно переведено раз-->
        <TextView
            android:id="@+id/dictionary_item_word_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textColor="@color/gray_3"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1"
            android:layout_marginStart="15dp" />

        <!--переведено с ошибками раз-->
        <TextView
            android:id="@+id/dictionary_item_word_err"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textColor="@color/gray_3"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="0"
            android:layout_marginStart="15dp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:textAlignment="gravity"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="@color/red"
            android:text="@string/dictionary_activity_delete"
            android:id="@+id/random_word_activity_skip_btn"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>